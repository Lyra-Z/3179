{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1350,
  "height": 600,
  "title": {
    "text": "The World's 100 Best Restaurants",
    "fontSize": 25,
    "offset": 20
  },
  
  "projection": {
    "type": "mercator",
    "center": [9, 20],
    "scale": 260
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Lyra-Z/3179/main/ne_50m.topojson",
        "format": {"type": "topojson", "feature": "ne_50m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Lyra-Z/3179/main/ne_50m.topojson",
        "format": {"type": "topojson", "feature": "ne_50m_graticules_15"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Lyra-Z/3179/main/Homework_w9/data/restaurantRank.csv"
      },
      "mark": {"type": "circle", "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude": {"field": "Latitude", "type": "quantitative"},
        "size": {"value": 100}
      }
    }
  ]
  
}